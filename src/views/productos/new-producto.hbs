<div class="card text-center">
    <div class="card-header">
        <h3>New Producto</h3>
    </div>
    <div class="card-body">
        <form action="/producto/new-producto" method="POST">
            <div class="form-group">
                <textarea name="nombre" placeholder="Nombre"></textarea>
            </div>
            <div class="form-group">
                <textarea name="marca" placeholder="Marca"></textarea>
            </div>
            <div class="form-group">
                <textarea name="categoria" placeholder="Categoria"></textarea>
            </div>
            <div class="form-group">
                <textarea name="elementos" placeholder="Elementos"></textarea>
            </div>
            <div class="form-group">
                <textarea name="imagenes" placeholder="Imagenes"></textarea>
            </div>            
            <div class="form-group">
                <button class="btn">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>