<div class="card-header">
    <h3>Edit Producto</h3>
</div>

<div class="card-body">
    <form action="/producto/edit/{{producto._id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div>
        <input type="text" name="nombre" value="{{producto.nombre}}"></input>
        </div>
            <div>
        <input type="text" name="marca" value="{{producto.marca}}"></input>
        </div>
        <div>
        <input type="text" name="categoria" value="{{producto.categoria}}"></input>
        </div>
        <div>
        <input type="text" name="elementos" value="{{producto.elementos}}"></input>
        </div>
        <div>
        <input type="text" name="imagenes" value="{{producto.imagenes}}">Imagen 1</input>
        </div>
            <div class="form-group">
        <button type="submit">
            Save
        </button>
    </div>
    </form>
</div>