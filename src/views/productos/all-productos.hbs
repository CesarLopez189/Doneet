<body>
    <div class=" clearfix">
  <div class="md-grid-1-3 flex-center">
    <a class="md-button md-button-floating flex-center" href="/producto/add">
      <svg fill="#444444" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
        <path d="M0 0h24v24H0z" fill="none"/>
      </svg>
    </a>
  </div>
</div>
    <section>
        
        <div class="container-xl rectangulo p-4">
            
            <div class="cols">
                 
                {{#each productos}}
                <div class="columnaCard" ontouchstart="this.classList.toggle('hover');">
                    <div class="containerCard">
                        <div class="frontCard" style="background-image:url({{imagenes}})">
                            <!--<div class="innerCard">
                                <p>{{nombre}}</p>       
                            </div>-->
                        </div>
                        <div class="backCard" style="background-image: url({{imagenes}});">
                            <div class="innerCard">
                                

    
                                <div class="buttonCard">
                                    
                                    <form action="/producto/edit/{{_id}}" method="">
                                        <button class="custom-btn btn-9 mb-2" type="submit">Editar</button>
                                    </form>

                                    <form action="/producto/delete/{{_id}}?_method=DELETE" method="POST">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button class="custom-btn btn-7 mb-2" type="sumbmit">Eliminar</button>
                                    </form>
                                    
                                    <form action="/producto/ver/{{_id}}">
                                        <button class="custom-btn btn-8 mb-2" type="submit">Ver</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
         
    </section>
</body>
